#include<stdio.h>
#include<sys/types.h>
#include<unistd.h>

int main()
{
  pid_t pid,mypid,myppid;
  pid = getpid();
  printf("Before fork: processes id is %d\n",pid);
  pid = fork();

  if(pid<0)
  {
    perror("fork() failure\n");
    return 1;
  }
  
  if(pid==0)
  {
    printf("This is child procsses\n");
    mypid = getpid();
    myppid = getppid();
    printf("processes id is %d and my ppid is %d",mypid,myppid);
  } 
  else
  {
    sleep(2)
    printf("This is parent processes\n");
    mypid = getpid();
    myppid = getppid();
    printf("processes id is %d and ppid is %d\n",mypid,myppid);
    printf("newly created processes id or child pid is %d\n",pid);
  }
  return 0;
}
